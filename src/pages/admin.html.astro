---
import BaseLayout from "../layouts/BaseLayout.astro";
import AdminHeader from "../components/admin/AdminHeader.astro";
import AdminLogin from "../components/admin/AdminLogin.astro";
import AdminPanel from "../components/admin/AdminPanel.astro";
import AdminPlaceIdModal from "../components/admin/AdminPlaceIdModal.astro";
import "../styles/global.css";
import "../styles/styles-admin.css";
import adminScriptUrl from "../scripts/admin.js?url";
---

<BaseLayout title="iMenu Panel de Administración">
  <div class="admin-container">
    <AdminHeader />
    <AdminLogin />
    <AdminPanel />
  </div>

  <AdminPlaceIdModal />

  <!-- SortableJS (necesario para ordenar en MOVIL y PC) -->
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>

  <!-- Google Maps JS (para Place ID Finder). Sustituye TU_API_KEY y restringe por dominio -->
  <script
    async
    defer
    src="https://maps.googleapis.com/maps/api/js?key=TU_API_KEY&libraries=places"
  ></script>

  <script type="module" src={adminScriptUrl}></script>
</BaseLayout>
